
[core]
    excludesfile = ~/.gitignore_global
    attributesfile = ~/.gitattributes_global
    editor = vim
    precomposeunicode = false
[color]
    ui = true
[color "diff"]
    meta = cyan bold
    frag = cyan bold
    func = cyan bold
    old = white red
    new = green reverse
    ; commit =
    whitespace = red reverse dim
    oldMoved = red yellow
    newMoved = black yellow
    ; -- See --color-moved in git-diff(1) --
    ; oldMovedDimmed =
    ; oldMovedAlternative =
    ; oldMovedAlternativeDimmed
    ; newMovedDimmed
    ; newMovedAlternative
    ; newMovedAlternativeDimmed
    ; -- See git-range-diff(1) --
    ; contextDimmed
    ; oldDimmed
    ; newDimmed
    ; contextBold
    ; oldBold
    ; newBold
[diff]
    ; -- vim+fugitive is preferred over vimdiff. See 'fix' alias --
    tool = fugitive
    wsErrorHighlight = all
    colorMoved = zebra
[difftool "fugitive"]
    cmd = vim -f -c "Gdiff" "$MERGED"
[merge]
    tool = fugitive
[mergtool "fugitive"]
    cmd = vim -f -c "Gdiff" "$MERGED"
[alias]
    d = --no-pager diff
    dw = --no-pager diff --color-words
    dt = difftool -y
    s = status
    ci = commit
    br = branch
    co = checkout
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    bl = blame
    new = checkout -b
    publish = "!f() { branch=${2-$(git rev-parse --abbrev-ref HEAD)}; remote=${2-$(git remote)}; git push -u $remote $branch; }; f"
    pub = publish
    fix = "!f() { ${EDITOR} $(git diff --name-only); }; f"
    words = diff --color-words
    who = --no-pager shortlog -sne
    last = --no-pager log -1 HEAD
    lc = log ORIG_HEAD.. --stat --no-merges
    changes = diff --stat
    diffstat = --no-pager diff --stat -r
    puff = pull --ff-only
    sha = "!f() { rev=${1-HEAD}; git rev-parse --short $rev; }; f"
[blame]
    date = short
[push]
    default = simple
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
[include]
    path = ~/.gitconfig.user
[hub]
    protocol = https
